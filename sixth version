#include<bits/stdc++.h>
using namespace std;
typedef struct card{
    int Order;        // 顺序
    char Suit;        // 花色
    char Number;    // 牌面大小
    int Zhi;//真正大小 J:11 Q:12 K:13 A:14 打几:15 g:20 G:21
}Card;
 
// card arr
Card OneCard[108] = {};
	Card A[27]={};
	Card B[27]={};
	Card C[27]={};
	Card D[27]={};

int Ada=2,Bda=2,Cda=2,Dda=2;
char abcd[4]={'a','a','a','a'};
// 打印所有
void xing(){
	cout<<endl;
	for(int i=0;i<27;i++)
	cout<<"***";
	cout<<endl;
} 
void showCard(){
	int i;
	
	for(i=0; i<108; i++){
		//printf("  %02d,%c,%c", OneCard[i].Order, OneCard[i].Suit, OneCard[i].Number);
		if(OneCard[i].Number=='@'){
			cout<<"  "<<OneCard[i].Suit<<","<<setw(3)<<10;
		}
		else
			cout<<"  "<<OneCard[i].Suit<<","<<setw(3)<<OneCard[i].Number<<"/"<<OneCard[i].Zhi;
		if(12 == i%13){
			printf("\n");
		}
	}	
	printf("\n");
}
 
// 随机乱序
void shuffle(){
	int i;
 
	Card tmpCard;
 
	srand(time(NULL));
	for(i=0; i<108; i++){
		int tmp = rand()%108;
//		tmpCard = OneCard[tmp];
//		OneCard[tmp] = OneCard[i];
//		OneCard[i] = tmpCard;
				tmpCard.Order=OneCard[tmp].Order;
				tmpCard.Suit=OneCard[tmp].Suit;
				tmpCard.Number=OneCard[tmp].Number;
				tmpCard.Zhi=OneCard[tmp].Zhi;
				OneCard[tmp].Order=OneCard[i].Order;
				OneCard[tmp].Suit=OneCard[i].Suit;
				OneCard[tmp].Number=OneCard[i].Number;
				OneCard[tmp].Zhi=OneCard[i].Zhi;
				OneCard[i].Order=tmpCard.Order;
				OneCard[i].Suit=tmpCard.Suit;
				OneCard[i].Number=tmpCard.Number;
				OneCard[i].Zhi=tmpCard.Zhi;
	}
 
//	showCard();
	return;
}
 
// 初始化，顺序
void initCard(){
	int i;
	
	for(i=0; i<108; i++){
		OneCard[i].Order = i;
 
		if(i>=104){
			if(i==104||i==105){
				OneCard[i].Suit = 'g';
				OneCard[i].Number = 'g';
				OneCard[i].Zhi=20; 
			}else{
				OneCard[i].Suit = 'G';
				OneCard[i].Number = 'G';
				OneCard[i].Zhi=21;
			}
		}else{
			if(i<=25){
				OneCard[i].Suit = 'H';	// heart红桃 
			}else if(i<=51){
				OneCard[i].Suit = 'S';	// spade黑桃 
			}else if(i<=77){
				OneCard[i].Suit = 'D';	// diamond方块 
			}else{ 
				OneCard[i].Suit = 'C';	// club梅花 
			}
 
			switch(i%13){
				case 0:
					OneCard[i].Number = 'A';
					OneCard[i].Zhi=14;
					break;
				case 9:
					OneCard[i].Number = '@';
					OneCard[i].Zhi=10;
					break;
				case 10:
					OneCard[i].Number = 'J';
					OneCard[i].Zhi=11;
					break;			
				case 11:
					OneCard[i].Number = 'Q';
					OneCard[i].Zhi=12;
					break;
				case 12:
					OneCard[i].Number = 'K';
					OneCard[i].Zhi=13;
					break;			
				default:
					OneCard[i].Number = (i%13)+'1';
					OneCard[i].Zhi=i%13+1;
			}
		}		
	}
 
//	showCard();
	return;
}
void paixu(Card X[],int n){
//	int n=0;
//	for(int i=0;i<27;i++){
//		if(X[i].Order!='\0')++n;
//	}
	for(int i=0;i<n-1;i++){
		for(int j=i+1;j<n;j++){
//			if(X[i].Number=='')
			if(X[i].Zhi==X[j].Zhi){
				if(X[i].Suit>X[j].Suit){
				Card tmp;	//花色排序，C<D<H<S
				tmp.Order=X[i].Order;
				tmp.Suit=X[i].Suit;
				tmp.Number=X[i].Number;
				tmp.Zhi=X[i].Zhi;
				X[i].Order=X[j].Order;
				X[i].Suit=X[j].Suit;
				X[i].Number=X[j].Number;
				X[i].Zhi=X[j].Zhi;
				X[j].Order=tmp.Order;
				X[j].Suit=tmp.Suit;
				X[j].Number=tmp.Number;
				X[j].Zhi=tmp.Zhi;
				} 
			} 
			if(X[i].Zhi>X[j].Zhi){
				Card tmp;//大小排序 
				tmp.Order=X[i].Order;
				tmp.Suit=X[i].Suit;
				tmp.Number=X[i].Number;
				tmp.Zhi=X[i].Zhi;
				X[i].Order=X[j].Order;
				X[i].Suit=X[j].Suit;
				X[i].Number=X[j].Number;
				X[i].Zhi=X[j].Zhi;
				X[j].Order=tmp.Order;
				X[j].Suit=tmp.Suit;
				X[j].Number=tmp.Number;
				X[j].Zhi=tmp.Zhi;
		}
		}
	}
}
void printyifu(Card a[],int n){
//	int n=0;
//	for(int i=0;i<27;i++){
//		if(a[i].Order!='\0')++n;
//	}
	for(int i=0,j=-1; i<n; i++){
		if(a[i].Order==-1)continue;
		if(a[i].Number=='@'){
			j++;
			cout<<"  "<<a[i].Suit<<","<<setw(3)<<10;
		}
		else{
			j++;
			cout<<"  "<<a[i].Suit<<","<<setw(3)<<a[i].Number;
//			cout<<"/"<<a[i].Zhi;
		}
			
		if(12 == j%13){
			printf("\n");
		}
	}
	cout<<endl;
}
//void Shuru(Card shuru[]){
//	Card shuru[27]={};//输入所出的牌 
	
//}
void chupai(Card A[],char a){
	cout<<endl;
	cout<<a<<"出牌"<<endl;
	printyifu(A,27); 
	Card shuru[27]={};//出牌 
	cout<<"请输入所出的牌(用空格隔开,b停止,c开挂):"<<endl;
	int count=0;
	while(cin>>shuru[count].Suit){
		string tmp;
		tmp[0]=shuru[count].Suit;
		if(tmp[0]!='C'&&tmp[0]!='D'&&tmp[0]!='S'&&tmp[0]!='H'&&tmp[0]!='b'&&tmp[0]!='c')
		{
			cout<<"无效输入，请重新输入"<<endl;
			continue;
		}	
		shuru[count].Order=count;
		if(tmp[0]=='b')break;
		if(tmp[0]=='c'){
			for(int xx=0;xx<27;xx++){
				shuru[xx]=A[xx];
			}
			count=27;
			break;
		}
		cin>>tmp;		
		if(tmp[0]>='0'&&tmp[0]<='9'){
		if(tmp[1]=='0'&&tmp[0]=='1'){
			shuru[count].Number='@';
			shuru[count].Zhi=10;
		}
		
		else {
			shuru[count].Number=tmp[0];
			shuru[count].Zhi=tmp[0]-'0';
		}
		}
		if(tmp[0]=='J'){
		shuru[count].Number=tmp[0];
		shuru[count].Zhi=11;
		}
		else if(tmp[0]=='Q'){
		shuru[count].Number=tmp[0];
		shuru[count].Zhi=12;
		}
		else if(tmp[0]=='K'){
		shuru[count].Number=tmp[0];
		shuru[count].Zhi=13;
		}
		else if(tmp[0]=='A'){
		shuru[count].Number=tmp[0];
		shuru[count].Zhi=14;
		}
		else if(tmp[0]=='g'){
		shuru[count].Number=tmp[0];
		shuru[count].Zhi=20;
		}
		else if(tmp[0]=='G'){
		shuru[count].Number=tmp[0];
		shuru[count].Zhi=21;
		}
		shuru[count].Order=count;
//		cout<<shuru[count].Suit<<","<<shuru[count].Number<<endl;
//		cout<<"count:"<<count<<endl;
		if(count<26)++count;
		else {++count;
			break;
		}
	}
//	cout<<"count:"<<count<<endl;
	shuru[0].Order=count;
	cout<<"排序并打印所输入的牌："<<endl;
	paixu(shuru,count);
	printyifu(shuru,count);	
//	cout<<shuru[0].Order;
//	cout<<a<<"出牌后"<<endl;
	for(int j=0;j<shuru[0].Order;j++){
		for(int i=0;i<27;i++){
			if(A[i].Suit==shuru[j].Suit&&A[i].Number==shuru[j].Number&&A[i].Order!=-1)
			{//花色相同，数字相同，没被出过 
				A[i].Order=-1;
				break;
			}
		}
	}
//	paixu(A,27);
//	printyifu(A,27);
	cout<<endl;
}
int meipai(Card A[],int a){
	int i=0;
	for(;i<27;i++){
		if(A[i].Order!=-1){//-1视为已出的牌 
			a=-1;
			break; 
		}
	}
	if(i==27)a=-2;//如果有牌，则为-1 没牌，则为-2 
	return a;
}
void yiju(){
	if(abcd[0]=='A'||abcd[0]=='a')
	{
		cout<<"本局打A的"; 
		if(Ada<=10)cout<<Ada<<endl;
		if(Ada==11)cout<<"J"<<endl;
		if(Ada==12)cout<<"Q"<<endl;
		if(Ada==13)cout<<"K"<<endl;
		if(Ada==14)cout<<"A"<<endl;
	}
	if(abcd[0]=='B')
	{
		cout<<"本局打B的";
		if(Bda<=10)cout<<Bda<<endl;
		if(Bda==11)cout<<"J"<<endl;
		if(Bda==12)cout<<"Q"<<endl;
		if(Bda==13)cout<<"K"<<endl;
		if(Bda==14)cout<<"A"<<endl;
	}
	if(abcd[0]=='C')
	{
		cout<<"本局打C的"; 
		if(Cda<=10)cout<<Cda<<endl;
		if(Cda==11)cout<<"J"<<endl;
		if(Cda==12)cout<<"Q"<<endl;
		if(Cda==13)cout<<"K"<<endl;
		if(Cda==14)cout<<"A"<<endl;
	}
	if(abcd[0]=='D')
	{
		cout<<"本局打D的";
		if(Dda<=10)cout<<Dda<<endl;
		if(Dda==11)cout<<"J"<<endl;
		if(Dda==12)cout<<"Q"<<endl;
		if(Dda==13)cout<<"K"<<endl;
		if(Dda==14)cout<<"A"<<endl; 
	}
	for(int i=0;i<4;i++){
		abcd[i]='a';
	}
	int jin=0;
	while(1){
		int cou=0;
		xing();
	int a=meipai(A,a),b=meipai(B,b),c=meipai(C,c),d=meipai(D,d);
//	cout<<"出牌前a:"<<a<<endl;
	if(a==-1){
		chupai(A,'A');
	}a=meipai(A,a);
//	cout<<"出牌后a:"<<a<<endl;
	if(a==-2){
		cout<<"A没牌了"<<endl;//没牌了 
		int k=0,x=0;
	for(;k<4;k++){
		if(abcd[k]=='A')x++;
	}	
//	cout<<"X:"<<x<<endl;
		if(x==0){
			abcd[jin]='A';
//			cout<<"jin:"<<jin<<endl;
			jin++;
//			cout<<"jin:"<<jin<<endl;
			if(cou<4)++cou;
		}
		if(x==1){
			if(cou<4)++cou;
		}
	}
//	cout<<"出牌前b:"<<b<<endl;
	if(b==-1){
		chupai(B,'B');
	}b=meipai(B,b);
//	cout<<"出牌后b:"<<b<<endl;
	if(b==-2){
		cout<<"B没牌了"<<endl;
		int k=0,x=0;
	for(;k<4;k++){
		if(abcd[k]=='B')x++;
	}	
//	cout<<"X:"<<x<<endl;
		if(x==0){
			abcd[jin]='B';
//			cout<<"jin:"<<jin<<endl;
			jin++;
//			cout<<"jin:"<<jin<<endl;
			if(cou<4)++cou;
		}
		if(x==1){
			if(cou<4)++cou;
		}
	}
//	cout<<"出牌前c:"<<c<<endl;
	if(c==-1){
		chupai(C,'C');
	}c=meipai(C,c);
//	cout<<"出牌后c:"<<c<<endl;
	if(c==-2){
		cout<<"C没牌了"<<endl;
		int k=0,x=0;
	for(;k<4;k++){
		if(abcd[k]=='C')x++;
	}	
//	cout<<"X:"<<x<<endl;
		if(x==0){
			abcd[jin]='C';
//			cout<<"jin:"<<jin<<endl;
			jin++;
//			cout<<"jin:"<<jin<<endl;
			if(cou<4)++cou;
		}
		if(x==1){
			if(cou<4)++cou;
		}
	}
//	cout<<"出牌前d:"<<d<<endl;
	if(d==-1){
		chupai(D,'D');
	}d=meipai(D,d);
//	cout<<"出牌后d:"<<d<<endl;
	if(d==-2){
		cout<<"D没牌了"<<endl;
		int k=0,x=0;
	for(;k<4;k++){
		if(abcd[k]=='D')x++;
	}
//	cout<<"X:"<<x<<endl;
		if(x==0){
			abcd[jin]='D';
//			cout<<"jin:"<<jin<<endl;
			jin++;
//			cout<<"jin:"<<jin<<endl;
			if(cou<4)++cou;
		}
		if(x==1){
			if(cou<4)++cou;
		}
	}
	xing();
//	cout<<"jin:"<<jin<<endl;
//	cout<<"cou:"<<cou<<endl;
	if(cou==4)
		break;
	else cou=0;
	}
	cout<<"本局排名："<<endl; 
	for(auto ea:abcd)cout<<ea<<endl;//从0到3 
	if(Ada==14)Ada=30;
	if(Bda==14)Bda=30;
	if(Cda==14)Cda=30;
	if(Dda==14)Dda=30;
	if(abcd[0]=='A'){
		if(abcd[1]=='C')Ada=Ada+3;
		if(abcd[3]=='C')Ada=Ada+1;
		if(abcd[2]=='C')Ada=Ada+2;
	}
	if(abcd[0]=='C'){
		if(abcd[1]=='A')Cda=Cda+3;
		if(abcd[3]=='A')Cda=Cda+1;
		if(abcd[2]=='A')Cda=Cda+2;
	}
	if(abcd[0]=='B'){
		
		if(abcd[1]=='D')Bda=Bda+3;
		if(abcd[3]=='D')Bda=Bda+1;
		if(abcd[2]=='D')Bda=Bda+2;
	}
	if(abcd[0]=='D'){
		if(abcd[1]=='B')Dda=Dda+3;
		if(abcd[3]=='B')Dda=Dda+1;
		if(abcd[2]=='B')Dda=Dda+2;
	}
	if(Ada>14&&Ada<30)Ada=14;
	if(Bda>14&&Bda<30)Bda=14;
	if(Cda>14&&Cda<30)Cda=14;
	if(Dda>14&&Dda<30)Dda=14;
//	cout<<"Ada:"<<Ada<<endl;
//	cout<<"Bda:"<<Bda<<endl;
//	cout<<"Cda:"<<Cda<<endl;
//	cout<<"Dda:"<<Dda<<endl;
	cout<<"本局结束"<<endl<<endl;
}
void shuaxin(){
	//	printf("init card:\n");
	initCard();
//	printf("\nafter shuffle1 cards: \n");
	shuffle();
	
	for(int i=0;i<27;i++){
		A[i].Order=OneCard[i].Order;
		A[i].Suit=OneCard[i].Suit;
		A[i].Number=OneCard[i].Number;
		A[i].Zhi=OneCard[i].Zhi;
	}
	for(int i=27;i<54;i++){
		B[i-27].Order=OneCard[i].Order;
		B[i-27].Suit=OneCard[i].Suit;
		B[i-27].Number=OneCard[i].Number;
		B[i-27].Zhi=OneCard[i].Zhi;
	}
	for(int i=54;i<81;i++){
		C[i-54].Order=OneCard[i].Order;
		C[i-54].Suit=OneCard[i].Suit;
		C[i-54].Number=OneCard[i].Number;
		C[i-54].Zhi=OneCard[i].Zhi;
	}
	for(int i=81;i<108;i++){
		D[i-81].Order=OneCard[i].Order;
		D[i-81].Suit=OneCard[i].Suit;
		D[i-81].Number=OneCard[i].Number;
		D[i-81].Zhi=OneCard[i].Zhi;
	}
//	cout<<"A:"<<endl;
//	printyifu(A);
	cout<<"A排序后:"<<endl;
	paixu(A,27);
	printyifu(A,27);
	cout<<"B排序后:"<<endl;
	paixu(B,27);
	printyifu(B,27);
	cout<<"C排序后:"<<endl;
	paixu(C,27);
	printyifu(C,27);
	cout<<"D排序后:"<<endl;
	paixu(D,27);
	printyifu(D,27);
}

int main(void){
	

	cout<<endl;
	while(Ada<=30&&Bda<=30&&Cda<=30&&Dda<=30){
		shuaxin();
		yiju();
	} 
	cout<<"游戏结束"<<endl;
//	cout<<"Ada:"<<Ada<<endl;
//	cout<<"Bda:"<<Bda<<endl;
//	cout<<"Cda:"<<Cda<<endl;
//	cout<<"Dda:"<<Dda<<endl;
	if(Ada>30||Cda>30){
		cout<<"恭喜AC获胜！";
	}	
	if(Bda>30||Dda>30){
		cout<<"恭喜BD获胜！";
	}
	
	
	
	return 0;
}
